<main>
<p id="notice"></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
        <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
          <div class="form-group">
            <label for="user_name">Title</label><br>
            <%= f.text_field :title, value: @book.title,class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_field :body, value: @book.body,class:"form-control" %>
          </div>
          <%= f.submit 'Update Book' ,class:"btn btn-success"%>
        <% end %>
        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
</main>