<p id="notice"><%= flash[:notice] %></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
          <div class="form-group">
            <label for="user_name">Title</label><br>
            <%= f.text_field :title, value: @book.title,class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_field :body, value: @book.body,class:"form-control" %>
          </div>
          <%= f.submit 'Update Book' ,class:"btn btn-success"%>
        <% end %>
        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
    </div>
  </div>
</div>