<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
    <meta name="WebCampBackendNew"/>
  </head>
  <body>
    <main>
      <p id="notice"></p>
      <div class='container px-5 px-sm-0'>
        <div class='row'>
          <div class='col-md-3'>
            <h2>User info</h2>
            <tr><%= image_tag @user.image %></tr>
            <table class='table'>
              <tbody>
                <tr>
            	    <th>name</th>
            	    <th><%= @user.name %></th>
                </tr>
                <tr>
            	    <th>introduction</th>
            	    <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
              <div class='row'>
                <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
                  <i class="fas fa-user-cog"></i>
                <% end %>
              </div>
            <h2 class="mt-3">New book</h2>
          <form action="/books" accept-charset="UTF-8" method="post">
            <input type="hidden" />
          <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title" />
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body">
            </textarea>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
          </div>
          </form>
          </div>
          <div class='col-md-8 offset-md-1'>
            <h2>Books</h2>
            <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>


