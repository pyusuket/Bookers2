<main>
<p id="notice"></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user, url: user_path(@user), method: :patch, enctype: :multipart_form do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label><br>
            <%= f.text_field :name, value: @user.name,class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label><br>
            <%= f.file_field :profile_image %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, value: @user.introduction,class:"form-control" %>
          </div>
          <%= f.submit 'Update User' ,class:"btn btn-secondary"%>
        <% end %>
    </div>
  </div>
</div>
</main>